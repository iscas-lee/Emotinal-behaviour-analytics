<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.test.openfaceandroid.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <!-- Last processed frame -->
        <ImageView
            android:id="@+id/frame"
            android:layout_width="320dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:layout_weight="0.0"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/emot_float_happy"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Sad"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/emot_float_sad"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Surprised"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/emot_float_surprised"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Angry"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/emot_float_angry"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Disgusted"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/emot_float_disgusted"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Feared"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/emot_float_feared"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Neutral"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/emot_float_neutral"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Attention"
                    android:layout_weight="0.0"/>

                <ProgressBar
                    android:id="@+id/attention"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:layout_weight="1.0"
                    style="@android:style/Widget.ProgressBar.Horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:layout_weight="0.0"/>

                <TextView
                    android:id="@+id/position"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="(0 / 0 / 0)"
                    android:layout_weight="1.0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Orientation"
                    android:layout_weight="0.0"/>

                <TextView
                    android:id="@+id/orientation"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="(0 / 0 / 0)"
                    android:layout_weight="1.0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>






</LinearLayout>
